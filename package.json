{
	"private": true,
	"name": "2-clipboard",
	"version": "0.0.1",
	"description": "Simple React button component for copying content to the clipboard.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MrEliWood/2-clipboard.git"
	},
	"author": "Eli Wood",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cjs"
			}
		},
		"./css": "./dist/style.css"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"keywords": [
		"copy",
		"copy-to-clipboard",
		"copy-to",
		"to-clipboard",
		"react",
		"react-copy",
		"react-copy-to",
		"react-copy-to-clipboard",
		"react-to-clipboard",
		"react-clipboard",
		"clipboard",
		"copy-2",
		"react-copy-2",
		"react-copy-2-clipboard",
		"react-2-clipboard",
		"copy-2-clipboard"
	],
	"peerDependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.9.0",
		"@eslint/js": "^9.9.0",
		"@storybook/addon-essentials": "^8.3.4",
		"@storybook/addon-interactions": "^8.3.4",
		"@storybook/addon-links": "^8.3.4",
		"@storybook/addon-onboarding": "^8.3.4",
		"@storybook/addon-themes": "^8.3.4",
		"@storybook/blocks": "^8.3.4",
		"@storybook/react": "^8.3.4",
		"@storybook/react-vite": "^8.3.4",
		"@storybook/test": "^8.3.4",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"eslint": "^9.9.0",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.9",
		"eslint-plugin-storybook": "^0.9.0",
		"globals": "^15.9.0",
		"storybook": "^8.3.4",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.0.1",
		"vite": "^5.4.1",
		"vite-plugin-dts": "^4.2.2"
	},
	"eslintConfig": {
		"extends": [
			"plugin:storybook/recommended"
		]
	}
